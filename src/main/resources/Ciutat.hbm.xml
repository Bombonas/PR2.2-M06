<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
   <class name = "com.project.Ciutat" table = "Ciutat">
        <meta attribute = "class-description">
            This class contains the Ciutat detail. 
        </meta>
        <id name="ciutatId" type="long" column="ciutat_id">
            <generator class="native" />
        </id>

        <property name="nom" type="string" column="nom"></property>

        <property name="pais" type="string" column="pais"></property>

        <property name="codiPostal" type="int" column="codi_postal"></property>
   </class>
</hibernate-mapping>